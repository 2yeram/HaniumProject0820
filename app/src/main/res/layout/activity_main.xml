<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F6F6"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/tv_place_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="50dp"
        android:backgroundTint="#FFFFFF"
        android:drawableLeft="@drawable/gps_resize"
        android:fontFamily="@font/godom"
        android:gravity="center"
        android:text="@string/place_name_test"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bt_home_ring"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/button_pattern_home"
        android:drawableLeft="@drawable/ring_resize"
        android:fontFamily="@font/godom"
        android:paddingTop="30dp"
        android:paddingBottom="30dp"
        android:text="알림 센터"
        android:textColor="#000000"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tv_place_name" />

    <Button
        android:id="@+id/bt_home_cctv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/button_pattern_home"
        android:drawableLeft="@drawable/cctv_resize"
        android:fontFamily="@font/godom"
        android:paddingTop="30dp"
        android:paddingBottom="30dp"
        android:text="CCTV 확인"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/bt_home_ring"
        tools:layout_editor_absoluteX="40dp" />

    <Button
        android:id="@+id/bt_home_gallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/button_pattern_home"
        android:drawableLeft="@drawable/gallery_resize"
        android:fontFamily="@font/godom"
        android:paddingTop="40dp"
        android:paddingBottom="40dp"
        android:text="지난 사진/영상"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/bt_home_cctv"
        tools:layout_editor_absoluteX="40dp" />

    <Button
        android:id="@+id/bt_home_facility"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/button_pattern_home"
        android:drawableLeft="@drawable/facility_resize"
        android:fontFamily="@font/godom"
        android:paddingTop="40dp"
        android:paddingBottom="40dp"
        android:text="시설물 현황"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/bt_home_gallery"
        tools:layout_editor_absoluteX="40dp" />


</androidx.constraintlayout.widget.ConstraintLayout>